- const m = 10;
- const r = 5;

svg(aria-hidden='true' width='0' height='0')
	filter#shape
		feComponentTransfer
			feFuncA(type='table' tableValues=`0 ${.5*m} 0`)
	
	filter#round
		feGaussianBlur(stdDeviation=r)
		feComponentTransfer
			feFuncA(type='table' tableValues=[-r, r + 1].join(' '))
		feComposite(in='SourceGraphic' operator='in')

